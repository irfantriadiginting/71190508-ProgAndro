<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:layout_marginTop="150dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivImage_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="4"
        android:gravity="center|left"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="6dp">


        <TextView
            android:id="@+id/tvName_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ini Nama Kontak"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvNumber_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ini Nomer Kontak"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvAddress_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ini Alamat Kontak"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEmail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ini Email Kontak"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>